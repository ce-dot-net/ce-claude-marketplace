{
  "hooks": {
    "SessionStart": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "bash ~/.claude/plugins/marketplaces/ce-dot-net-marketplace/plugins/ace-orchestration/scripts/auto-inject-instructions.sh"
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "Bash",
        "hooks": [
          {
            "type": "command",
            "command": "mkdir -p ~/.ace && echo \"{\\\"timestamp\\\":\\\"$(date -u +%Y-%m-%dT%H:%M:%SZ)\\\",\\\"tool\\\":\\\"Bash\\\",\\\"exit_code\\\":\\\"$EXIT_CODE\\\"}\" >> ~/.ace/execution_log.jsonl"
          }
        ]
      }
    ]
  }
}
