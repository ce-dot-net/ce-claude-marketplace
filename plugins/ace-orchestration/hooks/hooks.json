{
  "hooks": {
    "UserPromptSubmit": [
      {
        "matcher": "implement|build|create|add|develop|write|update|modify|change|edit|fix|debug|troubleshoot|refactor|optimize|integrate|setup|configure|architect|design|test|deploy",
        "hooks": [
          {
            "type": "command",
            "command": "python3 \"${CLAUDE_PLUGIN_ROOT}\"/hooks/enforce-ace-retrieval.py"
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "Write|Edit|NotebookEdit",
        "hooks": [
          {
            "type": "command",
            "command": "python3 \"${CLAUDE_PLUGIN_ROOT}\"/hooks/track-substantial-work.py"
          }
        ]
      }
    ],
    "PreCompact": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "python3 \"${CLAUDE_PLUGIN_ROOT}\"/hooks/pre-compact-ace-learning.py"
          }
        ]
      }
    ]
  }
}
